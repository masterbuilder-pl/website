{% extends "base.njk" %}
{% block content %}
  <h1 class="post-title">{{ title }}</h1>
  {% if image %}
    <img src="{{ image }}" alt="{{ title }}" class="post-main-image" />
  {% endif %}
  {% if instruction %}
    <button class="instruction-button" onclick="window.open('{{ instruction }}', '_blank')">
      {{ translations[language].button }}
    </button>
  {% endif %}
  <div class="post-content">
    {{ content | safe }}
  </div>
{% endblock %}